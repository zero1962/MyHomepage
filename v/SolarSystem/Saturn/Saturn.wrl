#VRML V2.0 utf8
#vr2-2-03.wrl

Background { skyColor 0.1 0.1 0.2 }


DEF Cylinder Transform
{
	translation 0 0 0
	rotation 1 1 1 0.3
	scale 1 1 1
	scaleOrientation 0 0 1 0
	center 0 0 0
	children
	[
		Shape
		{
  			appearance Appearance { texture ImageTexture { url "Ring.jpg" } }
			geometry Cylinder { height  0.01 radius  2.5  }
		}
	]
}

DEF Ball Transform
{
	translation 0 0 0
	rotation 1 1 1 0.3
	scale 1 1 1
	scaleOrientation 0 0 1 0
	center 0 0 0
	children
	[
		Shape
		{
  			appearance Appearance { texture ImageTexture { url "Saturn.jpg" } }
	  		geometry Sphere {}
		}
	]
}



DEF TimeSource TimeSensor 
{
	enabled TRUE
	loop TRUE
	startTime 0
	stopTime -1
	cycleInterval 10.0
}

DEF Animation OrientationInterpolator 
{
	key      [ 0,      .33,       .66,        1.0 ]
	keyValue [ 
		0 1 0 0, 
		0 1 0 2.1, 
		0 1 0 4.2, 
		0 1 0 6.2 ]
}

ROUTE TimeSource.fraction_changed TO Animation.set_fraction
ROUTE Animation.value_changed TO Ball.rotation

DEF OB_Camera Transform {
	translation 0.0 0.0 24.0
	rotation 0.0 0.0 0.0 0.0
	scale 1.0 1.0 1.0
	children [
		DEF Camera Viewpoint {
			description "Moon" 
			position 0.0 0.0 0.0
			orientation 0.0 0.0 0.0 0.0
			fieldOfView 0.661
		}
		
	]
}



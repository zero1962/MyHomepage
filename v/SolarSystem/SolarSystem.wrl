Background { skyColor 0.08 0.08 0.20 }

Group
{
  children
  [
    DEF Sun Transform
    {
      translation 0 0 0
      rotation  0.0 0.0 0.0 0.0
      scale 0.5 0.5 0.5

      children
      [
	Inline
        {
	  url "Sun/Sun.wrl"
	}   
      ]
    }
  ]
}

Group
{
  children
  [
      DEF TimerMe TimeSensor
    {
      cycleInterval 18.0
      loop TRUE
    }
    
    DEF RotMe OrientationInterpolator
    {
      key [0.0, 0.25, 0.5, 0.75, 1.0]
      keyValue
      [ 
        0 1 0 0.0,
        0 1 0 1.57,
        0 1 0 3.14,
        0 1 0 4.71,
        0 1 0 6.28
      ]
    }
    
    DEF Mercury Transform
    {
      translation 0 0 -700
      rotation  0.0 1.0 0.0 0.0
      center 0.0 0.0 700.0
      scale 0.02 0.02 0.02

      children
      [
	Inline
        {
	  url "Mercury/Mercury.wrl"
	}   
      ]
    }
  ]
}

ROUTE TimerMe.fraction_changed TO RotMe.set_fraction
ROUTE RotMe.value_changed TO Mercury.set_rotation

